<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
    <g:HTMLPanel>
        <h2>Register</h2>

        <div>
            <g:Label ui:field="registrationError" visible="false"/>

            <b:ControlGroup>
                <g:Label text="Email"/>
                <g:TextBox ui:field="email"/>
            </b:ControlGroup>

            <b:ControlGroup>
                <g:Label text="Username"/>
                <g:TextBox ui:field="username"/>
            </b:ControlGroup>

            <b:ControlGroup>
                <g:Label text="Password"/>
                <g:PasswordTextBox ui:field="password"/>
            </b:ControlGroup>

            <g:Button ui:field="register" text="Register"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
