<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:s='urn:import:com.gsr.myschool.common.client.widget'
             xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .contentWrapper {
            padding: 10px;
        }

        .smallMargin {
            margin-left: 175px;
        }

        .smallMarginButtom {
            margin-bottom: 10px !important;
        }
    </ui:style>


    <g:PopupPanel modal="true" autoHideEnabled="false" styleName="{resource.popupStyleCss.gwtPopupPanel}"
                  glassEnabled="true">
        <g:FlowPanel>
            <s:ModalHeader ui:field="modalHeader" text="Editer une session"/>

            <g:HTMLPanel styleName="{style.contentWrapper}">
                <boot:Form type="HORIZONTAL">
                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Nom</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:TextBox ui:field="nom" width="250px"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Date de session</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <b2:DateBox ui:field="dateSession" format="dd/mm/yyyy" width="150px"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Accueil des élèves à</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <s:TimeInput ui:field="welcomKids"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Debut des épreuves à</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <s:TimeInput ui:field="debutTest"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Récupération des enfant à</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <s:TimeInput ui:field="gatherKids"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Téléphone du site</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:InputAddOn prependIcon="PHONE">
                                <boot:TextBox ui:field="telephone"/>
                            </boot:InputAddOn>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="165px">Adresse</boot:ControlLabel>
                        <boot:Controls>
                            <boot:TextArea ui:field="adresse" width="250px"/>
                        </boot:Controls>
                    </boot:ControlGroup>
                </boot:Form>
            </g:HTMLPanel>

            <g:HTMLPanel styleName="{resource.sharedStyleCss.buttonContainerPopup}">
                <boot:Button ui:field="cancel" text="Annuler"/>
                <boot:Button ui:field="save"  text="Enregistrer" icon="SAVE"
                             styleName="btn btn-success"/>
            </g:HTMLPanel>
        </g:FlowPanel>
    </g:PopupPanel>
</ui:UiBinder>
