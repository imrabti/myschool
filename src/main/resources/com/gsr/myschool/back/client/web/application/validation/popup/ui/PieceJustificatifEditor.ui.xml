<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .checkContainer {
            float: left;
            padding: 10px;
        }

        .valueContainer {
            float: left;
            width: 450px;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-right: 10px;
        }

        .clear {
            clear: both;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.checkContainer}">
            <g:ToggleButton ui:field="available"/>
        </div>

        <div class="{style.valueContainer}">
            <g:Label ui:field="nom"/>
            <g:TextBox ui:field="motif"/>
        </div>

        <div class="{style.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
