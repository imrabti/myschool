<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>
    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Statut</boot:ControlLabel>
                <boot:Controls>
                    <boot:ValueListBox ui:field="status" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Formation</boot:ControlLabel>
                <boot:Controls>
                    <boot:ValueListBox ui:field="filiere" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Niveau demand√©</boot:ControlLabel>
                <boot:Controls>
                    <boot:ValueListBox ui:field="niveauEtude" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Date du</boot:ControlLabel>
                <boot:Controls>
                    <b2:DateBoxAppended ui:field="dateFrom" format="dd/mm/yyyy"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Date au</boot:ControlLabel>
                <boot:Controls>
                    <b2:DateBoxAppended ui:field="dateTill" format="dd/mm/yyyy"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Fratrie au GSR</boot:ControlLabel>
                <boot:Controls>
                    <boot:CheckBox ui:field="gsrFraterie" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Parents au GSR</boot:ControlLabel>
                <boot:Controls>
                    <boot:CheckBox ui:field="parentGsr" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
