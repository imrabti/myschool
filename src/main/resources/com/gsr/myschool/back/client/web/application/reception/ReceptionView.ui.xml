<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <g:LayoutPanel>
        <g:layer top="0px" height="50px" right="20px" left="0px">
            <g:HTMLPanel styleName="{resources.sharedStyleCss.bigTitle}">
                <h2>
                    <g:InlineLabel text="Réception des dossiers"/>
                </h2>
            </g:HTMLPanel>
        </g:layer>

        <g:layer top="90px" bottom="20px" right="20px" left="0px">
            <boot:Form  type="INLINE">
                <boot:ControlLabel>N° Dossier</boot:ControlLabel>
                <boot:TextBox ui:field="numDossierFilter" />
                <boot:ControlLabel>Nom ou Prénom du candidat</boot:ControlLabel>
                <boot:TextBox ui:field="candidatFilter" />
                <boot:Button text="Rechercher" icon="SEARCH" ui:field="searchBtn" />
            </boot:Form>
        </g:layer>

        <g:layer top="170px" bottom="20px" right="20px" left="0px">
            <boot:CellTable ui:field="inscriptionsTable" bordered="true"/>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>
