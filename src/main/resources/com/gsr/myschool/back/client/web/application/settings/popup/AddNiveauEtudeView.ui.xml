<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s='urn:import:com.gsr.myschool.common.client.widget'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .contentWrapper {
            padding: 10px;
            width: 400px;
            max-height: 400px;
            overflow-y: auto;
        }

        .smallMargin {
            margin-left: 90px;
        }

        .smallMarginButtom {
            margin-bottom: 10px !important;
        }
    </ui:style>

    <g:PopupPanel modal="true" autoHideEnabled="false" styleName="{resource.popupStyleCss.gwtPopupPanel}"
                  glassEnabled="true">
        <g:FlowPanel>
            <s:ModalHeader ui:field="modalHeader" text="Nouveau niveau d'étude"/>

            <g:HTMLPanel styleName="{style.contentWrapper}">
                <boot:Form type="HORIZONTAL">
                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="80px">Filière</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:ValueListBox ui:field="filiere" width="250px"/>
                            <span class="{resource.sharedStyleCss.requiredField}"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="80px">Type</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:ValueListBox ui:field="type" width="250px"/>
                            <span class="{resource.sharedStyleCss.requiredField}"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="80px">Nom</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:TextBox ui:field="nom"/>
                            <span class="{resource.sharedStyleCss.requiredField}"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="80px">Age requis</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <boot:IntegerBox ui:field="annee"/>
                            <span class="{resource.sharedStyleCss.requiredField}"/>
                        </boot:Controls>
                    </boot:ControlGroup>

                    <boot:ControlGroup addStyleNames="{style.smallMarginButtom}">
                        <boot:ControlLabel width="80px">Email Convocation ?</boot:ControlLabel>
                        <boot:Controls styleName="{style.smallMargin}">
                            <g:SimpleCheckBox ui:field="emailConvocation"/>
                            <span class="{resource.sharedStyleCss.requiredField}"/>
                        </boot:Controls>
                    </boot:ControlGroup>
                </boot:Form>
            </g:HTMLPanel>

            <g:HTMLPanel styleName="{resource.sharedStyleCss.buttonContainerPopup}">
                <boot:Button ui:field="save"  text="Enregistrer" icon="CHECK" styleName="btn btn-success"/>
            </g:HTMLPanel>
        </g:FlowPanel>
    </g:PopupPanel>
</ui:UiBinder>
