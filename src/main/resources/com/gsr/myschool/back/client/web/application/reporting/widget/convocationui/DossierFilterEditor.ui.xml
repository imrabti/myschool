<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>

    <ui:style>
        .row {
            margin-bottom: 10px;
        }

        .label {
            display: inline-block;
            width: 120px;
            text-align: right;
            margin-right: 5px;
        }

        .inline {
            display: inline-block;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.row}">
            <g:Label text="Sessions" styleName="{style.label}"/>
            <boot:ValueListBox ui:field="session" width="180px"/>
        </div>

        <div class="{style.row}">
            <g:Label text="Formation" styleName="{style.label}"/>
            <boot:ValueListBox ui:field="filiere" width="180px"/>

            <g:Label text="Niveau demandÃ©" styleName="{style.label}"/>
            <boot:ValueListBox ui:field="niveauEtude" width="180px"/>
        </div>

        <div class="{style.row}">
            <g:Label text="Fratrie au GSR" styleName="{style.label}"/>
            <boot:ValueListBox ui:field="gsrFraterie" styleName="{style.inline}" width="180px"/>

            <g:Label text="Parents au GSR" styleName="{style.label}"/>
            <boot:ValueListBox ui:field="parentGsr" styleName="{style.inline}" width="180px"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
