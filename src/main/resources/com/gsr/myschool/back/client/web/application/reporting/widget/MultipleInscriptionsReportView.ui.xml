<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:style>
        .tableWrapper {
            margin-top: 12px;
        }

        .enhancedWell {
            background-color: rgba(245, 245, 245, 0.6);
        }
    </ui:style>

    <g:HTMLPanel>
        <boot:Well addStyleNames="{style.enhancedWell}">
            <boot:Form type="INLINE">
                <boot:ControlGroup>
                    <boot:ControlLabel>Statut dossier</boot:ControlLabel>
                    <boot:Controls>
                        <boot:ValueListBox ui:field="status" width="180px"/>
                    </boot:Controls>
                </boot:ControlGroup>
            </boot:Form>

            <boot:Button text="Rechercher" icon="SEARCH" ui:field="search"/>
            <boot:Button text="Export Excel" icon="TH_LIST" ui:field="export"/>
        </boot:Well>

        <div class="{style.tableWrapper}">
            Here the result table
        </div>
    </g:HTMLPanel>
</ui:UiBinder>