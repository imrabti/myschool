<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s='urn:import:com.gsr.myschool.common.client.widget'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:p='urn:import:com.gsr.myschool.common.client.ui.dossier'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .tabPanelWrapper {
            padding-left: 10px;
        }

        .contentWrapper {
            padding: 10px;
            padding-right: 20px;
            padding-top: 20px;
        }
    </ui:style>

    <g:PopupPanel modal="true" autoHideEnabled="false" styleName="{resource.popupStyleCss.gwtPopupPanel}"
                  glassEnabled="true">
        <g:FlowPanel>
            <s:ModalHeader ui:field="modalHeader" text="DÃ©tails du dossier"/>

            <boot:TabPanel ui:field="steps" tabPosition="left">
                <boot:Tab heading="Parent" active="true">
                    <g:HTMLPanel styleName="{style.contentWrapper}">
                        <p:ParentEditor ui:field="parentEditor"/>
                    </g:HTMLPanel>
                </boot:Tab>
                <boot:Tab heading="Candidat">
                    <g:HTMLPanel styleName="{style.contentWrapper}">
                        <p:CandidatEditor ui:field="candidatEditor"/>
                    </g:HTMLPanel>
                </boot:Tab>
                <boot:Tab heading="Niveau Scolaire">
                    <g:HTMLPanel styleName="{style.contentWrapper}">
                        <p:NiveauScolaireEditor ui:field="niveauScolaireEditor"/>
                    </g:HTMLPanel>
                </boot:Tab>
            </boot:TabPanel>

            <g:HTMLPanel styleName="{resource.sharedStyleCss.buttonContainerPopup}">
                <boot:Button ui:field="cancel" text="Annuler"/>
                <boot:Button ui:field="save"  text="Enregistrer" icon="SAVE"
                             styleName="btn btn-primary"/>
            </g:HTMLPanel>
        </g:FlowPanel>
    </g:PopupPanel>
</ui:UiBinder>