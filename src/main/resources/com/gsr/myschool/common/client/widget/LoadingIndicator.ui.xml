<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .loadingWrapper {
            width: 90px;
            margin-right: auto;
            margin-left: auto;
            margin-bottom: 10px;
            font-size: 14px;
            font-weight: bold;
            color: #aeaeae;
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.loadingWrapper}">
        <g:Image resource="{resource.loading}"/> <br/>
        Chargement...
    </g:HTMLPanel>
</ui:UiBinder>
