<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <g:HTMLPanel>
        <g:ListBox ui:field="hour" width="55px"/>
        <g:InlineLabel text="H"/>
        <g:ListBox ui:field="minute" width="55px"/>
        <g:InlineLabel text="M"/>
        <span class="{resource.sharedStyleCss.requiredField}"/>
    </g:HTMLPanel>
</ui:UiBinder>
