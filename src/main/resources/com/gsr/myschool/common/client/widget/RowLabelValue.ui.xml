<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .rowDataWrapper {

        }

        .label {
            font-weight: bold;
            display: inline-block;
            width: 150px;
        }

        .value {
            display: inline-block;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.rowDataWrapper}">
        <g:Label ui:field="label" styleName="{style.label}"/>
        <g:HTML ui:field="value" styleName="{style.value}"/>
    </g:HTMLPanel>
</ui:UiBinder>
