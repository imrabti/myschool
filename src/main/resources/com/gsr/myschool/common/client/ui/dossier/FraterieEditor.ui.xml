<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="helpMessage" type="com.gsr.myschool.common.client.resource.message.HelpMessageBundle"/>

    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Nom</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.fraterieNom}">
                        <boot:TextBox ui:field="nom" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Prénom</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.frateriePrenom}">
                        <boot:TextBox ui:field="prenom" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>N° dossier GSR</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.fraterieNumDossier}">
                        <boot:TextBox ui:field="numDossierGSR" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Classe</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.classe}">
                        <boot:TextBox ui:field="classe" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Niveau</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.niveau}">
                        <boot:TextBox ui:field="niveau" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Etablissement</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.etablissement}">
                        <boot:TextBox ui:field="etablissement" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Type de fraterie</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.fraterieType}">
                        <boot:ValueListBox ui:field="typeFraterie" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
