<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>
    <ui:style>
        .smallMargin {
            margin-left: 160px;
        }
    </ui:style>

    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel width="150px">Mote de passe actuel</boot:ControlLabel>
                <boot:Controls styleName="{style.smallMargin}">
                    <boot:TextBox ui:field="oldPassword" width="230px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel width="150px">Nouveau mot de passe</boot:ControlLabel>
                <boot:Controls styleName="{style.smallMargin}">
                    <boot:TextBox ui:field="newPassword" width="230px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel width="150px">Confirmation</boot:ControlLabel>
                <boot:Controls styleName="{style.smallMargin}">
                    <boot:TextBox ui:field="confirmationPassword" width="230px"/>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
