<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="helpMessage" type="com.gsr.myschool.common.client.resource.message.HelpMessageBundle"/>
    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Etablissement scolaire</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.scolariteEtablissement}">
                        <boot:ValueListBox ui:field="etablissement" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Autre etablissement</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.scolariteAutreEtablissement}">
                        <boot:TextBox ui:field="newEtablissementScolaire" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Niveau etude</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.scolariteNiveauEtude}">
                        <boot:ValueListBox ui:field="typeNiveauEtude" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Classe</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.scolariteClasse}">
                        <boot:TextBox ui:field="classe" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>AnnÃ©e scolaire</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.scolariteAnneeScolaire}">
                        <boot:ValueListBox ui:field="anneeScolaire" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
