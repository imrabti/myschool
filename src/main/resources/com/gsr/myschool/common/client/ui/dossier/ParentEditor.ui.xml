<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>

    <ui:with field="helpMessage" type="com.gsr.myschool.common.client.resource.message.HelpMessageBundle"/>
    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Nom</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentNom}">
                        <boot:TextBox ui:field="nom" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Prénom</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentPrenom}">
                        <boot:TextBox ui:field="prenom" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup ui:field="civiliteWrapper">
                <boot:ControlLabel>Civilité</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentCivilite}">
                        <boot:ValueListBox ui:field="civilite"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup ui:field="lienParenteWrapper">
                <boot:ControlLabel>Lien de parenté</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentLienParente}">
                        <boot:TextBox ui:field="lientParente" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Date de naissance</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentDateNaissance}">
                        <b2:DateBoxAppended ui:field="birthDate"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Lieu de naissance</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentLieuNaissance}">
                        <boot:TextBox ui:field="birthLocation" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Nationnalité</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentNationnalite}">
                        <boot:ValueListBox ui:field="nationality" width="250px"/>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Fonction</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentFonction}">
                        <boot:TextBox ui:field="fonction" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Institution</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentInstitution}">
                        <boot:TextBox ui:field="institution" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Adresse email</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentAdresseEmail}">
                        <boot:InputAddOn prependText="@">
                            <boot:TextBox ui:field="email" width="228px"/>
                        </boot:InputAddOn>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Maison</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentTelMaison}">
                        <boot:InputAddOn prependIcon="PHONE">
                            <boot:TextBox ui:field="telDom" width="228px"/>
                        </boot:InputAddOn>
                    </boot:Tooltip>
                    <span class="{resource.sharedStyleCss.requiredField}"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Mobile GSM</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentTelMobile}">
                        <boot:InputAddOn prependIcon="PHONE">
                            <boot:TextBox ui:field="telGsm" width="228px"/>
                        </boot:InputAddOn>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Travail</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentTelTravail}">
                        <boot:InputAddOn prependIcon="PHONE">
                            <boot:TextBox ui:field="telBureau" width="228px"/>
                        </boot:InputAddOn>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Adresse</boot:ControlLabel>
                <boot:Controls>
                    <boot:Tooltip text="{helpMessage.infoParentAdresse}">
                        <boot:TextArea ui:field="address" width="250px"/>
                    </boot:Tooltip>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
