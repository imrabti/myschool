<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="sharedResources" type="com.gsr.myschool.common.client.resource.SharedResources"/>
    <ui:with field="resources" type="com.gsr.myschool.front.client.resource.FrontResources"/>

    <g:HTMLPanel styleName="{resources.frontStyleCss.loginBoxWrapper}">
        <div class="{resources.frontStyleCss.headerWrapper}">
            <g:Image resource="{sharedResources.logo}" styleName="{resources.frontStyleCss.logo}"/>

            <ul class="{resources.frontStyleCss.tabsMenu}">
                <li>
                    <g:InlineLabel ui:field="register" text="Nouveau compte"/>
                </li>

                <li class="{resources.frontStyleCss.selected}">
                    <g:InlineLabel text="Connexion"/>
                </li>
            </ul>

            <div style="clear: both;"/>
        </div>

        <div class="{resources.frontStyleCss.loginContent}">
            <h2>Se connecter à GSR</h2>

            <g:Label ui:field="loginError" visible="false"
                     styleName="{resources.frontStyleCss.loginError}"
                     text="Mot de passe ou email érronés"/>

            <boot:Form type="VERTICAL">
                <boot:ControlGroup>
                    <boot:ControlLabel>Email</boot:ControlLabel>
                    <boot:Controls>
                        <boot:TextBox ui:field="username" width="250px"/>
                    </boot:Controls>
                </boot:ControlGroup>

                <boot:ControlGroup>
                    <boot:ControlLabel>Password</boot:ControlLabel>
                    <boot:Controls>
                        <boot:PasswordTextBox ui:field="password" width="250px"/>
                    </boot:Controls>
                </boot:ControlGroup>
            </boot:Form>

            <boot:Button text="Se connecter" ui:field="login"
                         styleName="btn btn-warning"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
