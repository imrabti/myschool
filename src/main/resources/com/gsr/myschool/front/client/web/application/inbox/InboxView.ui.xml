<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:cell='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field="resources" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <g:HTMLPanel styleName="{resources.sharedStyleCss.mainContentWrapper}">
        <g:HTMLPanel styleName="{resources.sharedStyleCss.bigTitle}">
            <h2>
                <g:InlineLabel text="Inbox"/>
            </h2>
            <div>
                <boot:ButtonGroup>
                    <boot:Button text="Supprimer"/>
                    <boot:Button text="Comme Lus"/>
                    <boot:Button text="Comme Non Lus"/>
                </boot:ButtonGroup>
            </div>
            <span style="display: block; clear: both;"/>
            <cell:CellList ui:field="inboxTable"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
