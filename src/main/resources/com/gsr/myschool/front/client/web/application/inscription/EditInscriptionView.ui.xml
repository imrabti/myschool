<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="clientResources" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .noBackground {
            background: none;
        }
    </ui:style>

    <g:HTMLPanel styleName="{clientResources.sharedStyleCss.mainContentWrapper}">
        <g:HTMLPanel styleName="{clientResources.sharedStyleCss.bigTitle}">
            <h2>
                <g:InlineLabel text="Editer une pré-inscription"/>
            </h2>
            <span style="display: block; clear: both;"/>
        </g:HTMLPanel>

        <boot:TabPanel ui:field="steps" tabPosition="left">
            <boot:Tab heading="Etape 1" active="true">
                <g:SimplePanel ui:field="step1"/>
            </boot:Tab>

            <boot:Tab heading="Etape 2">
                <g:SimplePanel ui:field="step2"/>
            </boot:Tab>

            <boot:Tab heading="Etape 3">
                <g:SimplePanel ui:field="step3"/>
            </boot:Tab>

            <boot:Tab heading="Etape 4">
                <g:SimplePanel ui:field="step4"/>
            </boot:Tab>

            <boot:Tab heading="Etape 5">
                <g:SimplePanel ui:field="step5"/>
            </boot:Tab>
        </boot:TabPanel>

        <g:HTMLPanel styleName="{clientResources.sharedStyleCss.buttonContainer}"
                     addStyleNames="{style.noBackground}">
            <div style="float: left;">
                <boot:Button ui:field="saveExit" text="Enregistrer et sortir"/>
            </div>

            <div style="float: right;">
                <boot:Button ui:field="back" text="Précedent" icon="CHEVRON_LEFT"/>
                <boot:Button ui:field="next"  text="Suivant" icon="CHEVRON_RIGHT"
                             iconPosition="RIGHT" styleName="btn btn-primary"/>
                <boot:Button ui:field="finish" text="Terminer" icon="OK" styleName="btn btn-success"/>
            </div>

            <div style="clear: both;"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
