<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s='urn:import:com.gsr.myschool.common.client.widget'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="resource" type="com.gsr.myschool.common.client.resource.SharedResources"/>

    <ui:style>
        .contentWrapper {
            padding: 20px 10px;
            max-height: 400px;
            width: 500px;
            text-align: center;
        }

        .checkBoxInline {
            display: inline-block;
        }
    </ui:style>

    <g:PopupPanel modal="true" autoHideEnabled="false" styleName="{resource.popupStyleCss.gwtPopupPanel}"
                  glassEnabled="true">
        <g:FlowPanel>
            <s:ModalHeader ui:field="modalHeader" text="Déclaration d'honneur"/>

            <g:HTMLPanel styleName="{style.contentWrapper}">
                <boot:CheckBox ui:field="declarationHonneur" styleName="{style.checkBoxInline}"/>
                <g:InlineLabel>
                    Je déclare sur l'honneur que les informations reprises
                    ci-dessus sont véridiques et complètes.
                </g:InlineLabel>
            </g:HTMLPanel>

            <g:HTMLPanel styleName="{resource.sharedStyleCss.buttonContainerPopup}">
                <boot:Button ui:field="validate"  text="Valider" styleName="btn btn-primary"/>
            </g:HTMLPanel>
        </g:FlowPanel>
    </g:PopupPanel>
</ui:UiBinder>