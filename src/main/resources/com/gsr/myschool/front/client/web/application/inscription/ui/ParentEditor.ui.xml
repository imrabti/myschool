<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>
    <g:HTMLPanel>
        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Nom</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="nom" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Prénom</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="prenom" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Lien de parenté</boot:ControlLabel>
                <boot:Controls>
                    <boot:ListBox ui:field="lienParente" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Fonction</boot:ControlLabel>
                <boot:Controls>
                    <boot:ListBox ui:field="fonction" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Adresse email</boot:ControlLabel>
                <boot:Controls>
                    <boot:InputAddOn prependText="@">
                        <boot:TextBox ui:field="email" width="230px"/>
                    </boot:InputAddOn>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Téléphone</boot:ControlLabel>
                <boot:Controls>
                    <boot:InputAddOn prependIcon="PHONE">
                        <boot:TextBox ui:field="phone" width="230px"/>
                    </boot:InputAddOn>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Adresse</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextArea ui:field="address" width="250px"/>
                </boot:Controls>
            </boot:ControlGroup>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
