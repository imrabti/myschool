<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>
    <g:HTMLPanel>
        <h2>Register</h2>

        <boot:Form type="HORIZONTAL">
            <boot:ControlGroup>
                <boot:ControlLabel>Email</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="email"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Login</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="username"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Nom</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="firstName"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Pr√©nom</boot:ControlLabel>
                <boot:Controls>
                    <boot:TextBox ui:field="lastName"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Mot de passe</boot:ControlLabel>
                <boot:Controls>
                    <boot:PasswordTextBox ui:field="password"/>
                </boot:Controls>
            </boot:ControlGroup>

            <boot:ControlGroup>
                <boot:ControlLabel>Confirmation mot de passe</boot:ControlLabel>
                <boot:Controls>
                    <boot:PasswordTextBox ui:field="passwordConfirmation"/>
                </boot:Controls>
            </boot:ControlGroup>

            <g:Button ui:field="register" text="Inscrire"/>
        </boot:Form>
    </g:HTMLPanel>
</ui:UiBinder>
