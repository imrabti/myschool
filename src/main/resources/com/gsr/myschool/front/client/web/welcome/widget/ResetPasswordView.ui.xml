<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:boot='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:with field="sharedResources" type="com.gsr.myschool.common.client.resource.SharedResources"/>
    <ui:with field="resources" type="com.gsr.myschool.front.client.resource.FrontResources"/>

    <g:HTMLPanel styleName="{resources.frontStyleCss.loginBoxWrapper}">
        <div class="{resources.frontStyleCss.headerWrapper}">
            <g:Image resource="{sharedResources.logo}" styleName="{resources.frontStyleCss.logo}"/>

            <ul class="{resources.frontStyleCss.tabsMenu}">
                <li class="{resources.frontStyleCss.selected}">
                    <g:InlineLabel text="Nouveau mot de passe"/>
                </li>
            </ul>

            <div style="clear: both;"/>
        </div>

        <div class="{resources.frontStyleCss.loginContent}">
            <h2>Introduisez un nouveau mot de passe</h2>

            <boot:Form type="VERTICAL">
                <boot:ControlGroup>
                    <boot:ControlLabel>Nouveau mot de passe</boot:ControlLabel>
                    <boot:Controls>
                        <boot:PasswordTextBox ui:field="password" width="250px"/>
                    </boot:Controls>
                </boot:ControlGroup>

                <boot:ControlGroup>
                    <boot:ControlLabel>Confirmation du mot de passe</boot:ControlLabel>
                    <boot:Controls>
                        <boot:PasswordTextBox ui:field="passwordConfirmation" width="250px"/>
                    </boot:Controls>
                </boot:ControlGroup>
            </boot:Form>

            <boot:Button text="Enregistrer" ui:field="save" styleName="btn btn-warning"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
